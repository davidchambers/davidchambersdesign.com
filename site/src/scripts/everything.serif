public components =
  (path.join ...[__dirname ".." ".." "public" ...components])

write-file filename data =
  (fs.writeFileSync ...[filename data])

_ = (write-file (public ["css" "screen.css"])
                generate-css)

render-svg attrs =
  (s/pipe [(svg {:xmlns "http://www.w3.org/2000/svg" :version "1.1" ...attrs})
           (:render _ "  " 0 false)
           (+ _ "<?xml version=\"1.0\" standalone=\"no\"?>\n")])

_01 = (write-file (public ["svg" "masthead.svg"])
                  (render-svg {} (:fill masthead)))

_02 = (write-file (public ["svg" "masthead-mask.svg"])
                  (render-svg {} (:mask masthead)))

_03 = (write-file (public ["svg" "about.svg"])
                  (render-svg {:width 16 :height 16} icon:about))

_04 = (write-file (public ["svg" "archives.svg"])
                  (render-svg {:width 16 :height 16} icon:archives))

_05 = (write-file (public ["svg" "bitbucket.svg"])
