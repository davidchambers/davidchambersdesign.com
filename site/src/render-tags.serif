import S from "sanctuary";

import * from "./elements.serif";
import tags from "./tags.serif";

export default render-tags;

render-tags posts = {
  from-entry = \[slug, name] -> {
    li' {data-count: S.size $ filter {S.equals slug} $ posts >>= (.tags)} [
      a {href: `/tag/${slug}/`} [name],
    ]
  };
  [
    h1 ["Tags"],
    ol' {id: "tags"} {from-entry <$> Object.entries tags},
    div {class: "clearfix"} [],
  ]
};
