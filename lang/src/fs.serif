import fs from "node:fs/promises";

import {attemptP} from "fluture";

export {
  mkdir,
  readFile,
  writeFile,
};

mkdir options path = {
  attemptP \() -> apply fs.mkdir [path, options]
};

readFile filename = {
  attemptP \() -> apply fs.readFile [filename, "utf8"]
};

writeFile filename data = {
  attemptP \() -> apply fs.writeFile [filename, data]
};
